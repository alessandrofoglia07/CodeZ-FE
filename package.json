{
    "name": "modern-vite-react-app",
    "private": true,
    "description": "Modern Vite React App",
    "version": "1.0.0",
    "type": "module",
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "docker-build-dev": "docker build -t modern-vite-react-app-dev -f Dockerfile.dev .",
        "docker-build-prod": "docker build -t modern-vite-react-app-prod -f Dockerfile.prod .",
        "docker-run-dev-win": "docker run -it --rm -p 3000:3000 --name modern-vite-react-app -d -v %cd%/src:/app/src:ro -v %cd%/public:/app/public:ro -v %cd%/index.html:/app/index.html:ro modern-vite-react-app-dev",
        "docker-run-dev-linux": "docker run -it --rm -p 3000:3000 --name modern-vite-react-app -d -v $(pwd)/src:/app/src:ro -v $(pwd)/public:/app/public:ro -v $(pwd)/index.html:/app/index.html:ro modern-vite-react-app-dev",
        "docker-run-prod": "docker run -it --rm -p 8080:80 --name modern-vite-react-app -d modern-vite-react-app-prod"
    },
    "dependencies": {
        "@headlessui/react": "^1.7.17",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.16.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.0.3",
        "autoprefixer": "^10.4.15",
        "eslint": "^8.45.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "postcss": "^8.4.30",
        "tailwindcss": "^3.3.3",
        "typescript": "^5.0.2",
        "vite": "^4.4.5",
        "vite-plugin-pwa": "^0.16.5"
    }
}
